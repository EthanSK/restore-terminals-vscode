{
	"name": "restore-terminals",
	"displayName": "Restore Terminals",
	"description": "Configure how your integrated VSCode terminals open at startup",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "restore-terminals.restoreTerminals",
				"title": "Restore Terminals"
			}
		],
		"configuration": {
			"title": "Restore Terminals Config",
			"type": "object",
			"properties": {
				"restoreTerminals.terminals": {
					"type": "array",
					"items": {
						"properties": {
							"terminalName": {
								"type": "string",
								"description": "The name to give the terminal."
							},
							"splitTerminals": {
								"type": "array",
								"items": {
									"properties": {
										"commandToRun": {
											"type": "string",
											"description": "The shell command to execute when this terminal opens."
										}
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}